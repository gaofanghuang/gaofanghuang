<section class="outer">
  <div class="articles-category">
    <% if (site.categories.length){ %>
    <div class="articles-category-title"><%= __('categories') %></div>
    <ul class="articles-category-list">
      <% site.categories.sort('name').each(function(item){ %> <%
      if(item.posts.length){ %>
      <a
        class="articles-category-list-link"
        href="<%- config.root %><%- item.path %>"
        title="<%= item.name %>"
      >
        <li class="articles-category-list-item">
          <%= item.name %><i><%= item.posts.length %></i>
        </li>
      </a>
      <% } %> <% }); %>
    </ul>
    <% } %>
  </div>

  <div class="articles-category articles-tags">
    <% if (site.tags.length){ %>
    <div class="articles-category-title"><%= __('tags') %></div>
    <ul class="articles-category-list">
      <% site.tags.sort('name').each(function(item){ %> <%
      if(item.posts.length){ %>
      <a
        class="articles-category-list-link"
        href="<%- config.root %><%- item.path %>"
        title="<%= item.name %>"
      >
        <li class="articles-category-list-item">
          <%= item.name %><i><%= item.posts.length %></i>
        </li>
      </a>
      <% } %> <% }); %>
    </ul>
    <% } %>
  </div>
</section>
