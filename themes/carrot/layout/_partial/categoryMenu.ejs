<% if (site.categories.length){ %>
<div class="category-menu-wrap index-box">
  <div class="index-box-title flex flex-y">分类</div>
  <ul class="category-menu-list">
    <% var cateTemp; %>
    <% cateTemp = site.categories.sort('posts.length') %>
    <% cateTemp = cateTemp.reverse() %>
    <% cateTemp.each(function(item){ %> <%
    if(item.posts.length){ %>

    <li class="category-menu-list-item">
      <a
        class="category-menu-list-link"
        href="<%- config.root %><%- item.path %>"
        title="<%= item.name %>"
      >
      <span><%= item.name %></span>
      <i><%= item.posts.length %></i>
      </a>
    </li>

    <% } %> <% }); %>
  </ul>
</div>
<% } %>
