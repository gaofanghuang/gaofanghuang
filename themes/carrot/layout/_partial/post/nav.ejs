<% if (post.prev || post.next){ %>
  <nav class="article-nav">
    <% if (post.prev){ %>
      <div class="article-nav-link article-nav-prev">
        <strong class="article-nav-caption"><%- theme.nav_text.post_prev %></strong>
        <a href="<%- url_for(post.prev.path) %>" class="article-nav-title">
          <% if (post.prev.title){ %>
            <%= post.prev.title %>
          <% } else { %>
            (no title)
          <% } %>
        </a>
      </div>
    <% } %>
    <% if (post.next){ %>
      <div class="article-nav-link article-nav-next">
        <strong class="article-nav-caption"><%- theme.nav_text.post_next %></strong>
        <a href="<%- url_for(post.next.path) %>" class="article-nav-title"><%= post.next.title %></a>
      </div>
    <% } %>
  </nav>
<% } %>
